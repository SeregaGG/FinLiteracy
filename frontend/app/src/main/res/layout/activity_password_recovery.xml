<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="passwordRecoveryVM" type="com.daniiltropolsapplication.app.modules.passwordrecovery.data.viewmodel.PasswordRecoveryVM"/>
    </data>
    <LinearLayout android:gravity="center_horizontal"
        android:id="@+id/linearColumnleftarrowone"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical" style="@style/groupStylegray_100">
        <androidx.appcompat.widget.Toolbar android:gravity="start"
            android:id="@+id/toolbarToolbar"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_9pxv"
            android:layout_width="match_parent" app:contentInsetStart="0dp">
            <LinearLayout android:gravity="start"
                android:id="@+id/linearRowleftarrowone"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal" style="@style/groupStylegray_300_cc">
                <ImageView android:id="@+id/imageLeftarrowOne"
                    android:layout_height="@dimen/_25pxh"
                    android:layout_marginBottom="@dimen/_25pxv"
                    android:layout_marginStart="@dimen/_22pxh"
                    android:layout_marginTop="@dimen/_21pxv"
                    android:layout_width="@dimen/_25pxh"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_leftarrow1"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_leftarrow1"/>
                <TextView android:ellipsize="end"
                    android:id="@+id/txtFortyNine"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_22pxv"
                    android:layout_marginEnd="@dimen/_73pxh"
                    android:layout_marginStart="@dimen/_27pxh"
                    android:layout_marginTop="@dimen/_23pxv"
                    android:layout_weight="0.89"
                    android:layout_width="0dp" android:singleLine="true"
                    android:text="@{passwordRecoveryVM.passwordRecoveryModel.txtFortyNine}"
                    style="@style/txtMontserratbold20" tools:text="@string/lbl64"/>
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
        <TextView android:gravity="center_horizontal"
            android:id="@+id/txtEma"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_10pxh"
            android:layout_marginStart="@dimen/_10pxh"
            android:layout_marginTop="@dimen/_45pxv"
            android:layout_width="match_parent"
            android:text="@{passwordRecoveryVM.passwordRecoveryModel.txtEma}"
            style="@style/txtMontserratsemibold14" tools:text="@string/msg_e_ma"/>
        <EditText
            android:background="@drawable/rectangle_bg_white_a700_radius_25"
            android:ellipsize="end" android:hint="@string/lbl_e_mail"
            android:id="@+id/etGroupFortyEight"
            android:inputType="textEmailAddress"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_10pxh"
            android:layout_marginStart="@dimen/_10pxh"
            android:layout_marginTop="@dimen/_42pxv"
            android:layout_width="match_parent"
            android:paddingBottom="@dimen/_17pxv"
            android:paddingEnd="@dimen/_30pxh"
            android:paddingStart="@dimen/_26pxh"
            android:paddingTop="@dimen/_20pxv" android:singleLine="true"
            android:text="@={passwordRecoveryVM.passwordRecoveryModel.etGroupFortyEightValue}"
            android:textColorHint="@color/black_900_66"
            style="@style/etSolidRounded" tools:ignore="Autofill"/>
        <androidx.appcompat.widget.AppCompatButton
            android:ellipsize="end" android:gravity="center"
            android:id="@+id/btn" android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_10pxh"
            android:layout_marginStart="@dimen/_10pxh"
            android:layout_marginTop="@dimen/_46pxv"
            android:layout_width="match_parent"
            android:paddingBottom="@dimen/_14pxv"
            android:paddingEnd="@dimen/_30pxh"
            android:paddingStart="@dimen/_30pxh"
            android:paddingTop="@dimen/_14pxv" android:singleLine="true"
            android:text="@string/lbl19" android:textAllCaps="false"
            style="@style/btnSolidRounded" tools:text="@string/lbl19"/>
        <ImageView android:id="@+id/imageANYAacutelit"
            android:layout_gravity="center_horizontal"
            android:layout_height="@dimen/_340pxh"
            android:layout_marginBottom="@dimen/_22pxv"
            android:layout_marginEnd="@dimen/_10pxh"
            android:layout_marginStart="@dimen/_10pxh"
            android:layout_marginTop="@dimen/_9pxv"
            android:layout_width="@dimen/_340pxh"
            android:scaleType="fitXY"
            imageRes="@{@drawable/img_anyaacutelit}"
            tools:ignore="ContentDescription" tools:src="@drawable/img_anyaacutelit"/>
    </LinearLayout>
</layout>
